<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="510dp"
    android:layout_gravity="bottom"
    tools:context=".Appointment_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="My Name :"
            android:id="@+id/textView7"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/editText6"
            android:layout_below="@+id/textView7"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="AdharCard No."
            android:id="@+id/textView8"
            android:layout_below="@+id/editText6"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText7"
            android:singleLine="true"
            android:layout_below="@+id/textView8"
            android:layout_alignStart="@+id/textView8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="email- ID"
            android:id="@+id/textView9"
            android:layout_below="@+id/editText7"
            android:layout_alignStart="@+id/editText7" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText8"
            android:layout_alignParentEnd="true"
            android:singleLine="true"
            android:layout_below="@+id/textView9"
            android:layout_alignLeft="@+id/editText7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Date"
            android:id="@+id/textView10"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText8"
            android:layout_alignLeft="@+id/editText7" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText9"
            android:singleLine="true"
            android:layout_below="@+id/textView10"
            android:layout_alignLeft="@+id/editText7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Time"
            android:id="@+id/textView11"
            android:layout_below="@+id/editText9"
            android:layout_alignStart="@+id/editText9" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText10"
            android:layout_alignParentEnd="true"
            android:singleLine="true"
            android:layout_below="@+id/textView11"
            android:layout_alignLeft="@+id/editText9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Appointment for:"
            android:id="@+id/textView12"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText10"
            android:layout_alignLeft="@+id/editText9" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText11"
            android:singleLine="true"
            android:layout_below="@+id/textView12"
            android:layout_alignLeft="@+id/editText9" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREATE APPOINTMENT"
            android:id="@+id/appoint"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#74577b"
            />
    </RelativeLayout>

</FrameLayout>
